<h3>Link to an existing bug</h3>

<div class='manage-tbl'>
  <table>
    <tr>
      <td style="text-align: right">
        Bugzilla account
      </td>
      <td style="text-align: left">
        <input id="lbb_user" value="<%=current_user.email%>"/>
      </td>
    </tr>
    <tr>
      <td style="text-align: right">
        Bugzilla account password
      </td>
      <td style="text-align: left">
        <input id="lbb_pwd" value="<%=session[:bz_pass]%>" type="password"/>
      </td>
    </tr>
    <tr>
      <td style="text-align: right">
        Bugzilla Bug ID
      </td>
      <td style="text-align: left">
        <input id="lbb_bz_id"/>
      </td>
    </tr>
    <tr>
      <td colspan="2" style="text-align: right">
        <button onclick="createBzBugLink()">
          Link
        </button>
        <button onclick="hideLinkBzBugForm()">
          Cancel
        </button>
      </td>
    </tr>
  </table>
</div>

<%= render :partial => "layouts/sep" %>