<%@package = Package.find(params[:package_id])%>
<h3>Sync bug information with Bugzilla</h3>
<form onsubmit="return false;">
  <div class='manage-tbl'>
    <table>
      <tr>
        <td style="text-align: right">
          Bugzilla account
        </td>
        <td style="text-align: left">
          <input id="sbb_user" value="<%= current_user.email %>"/>
        </td>
      </tr>
      <tr>
        <td style="text-align: right">
          Bugzilla account password
        </td>
        <td style="text-align: left">
          <input id="sbb_pwd" value="<%= session[:bz_pass] %>" type="password"/>
        </td>
      </tr>  
      <tr>
        <td colspan="2" style="text-align: right">
            <%= render :partial => 'layouts/progress_indicator', 
                :locals => {
                    :progress_indicator_id => "sync_bz_bug_button_indicator",
                    :msg => "Be patient"
                }
             %>
            <button onclick="syncAllBugInfoWithBz('<%=@package.id%>');return false;">
                Do Sync
            </button>
            <button onclick="hideBzBugForm('sync_bz_bug')">
                Cancel
            </button>
        </td>
      </tr>
    </table>
  </div>
</form>

<%= render :partial => "layouts/sep" %>

