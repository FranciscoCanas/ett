<% package ||= nil %>
<% form ||= nil %>
<%
   product_id = -1
   if !package.blank?
     product_id = package.product.id
   elsif !params[:product_id].blank?
     product_id = Product.find_by_name(unescape_url(params[:product_id])).id
   end

   blank_status = Status.new
   blank_status.id = ''
   blank_status.name = '-'

   statuses = []
   statuses << blank_status
   statuses << Status.find_all_can_select_by_product_id_in_global_scope(product_id)
   statuses = statuses.flatten
%>
<% if form.blank? %>
    <% if package.blank? || package.status.blank? %>
        <%= select_tag('package[status_id]', options_from_collection_for_select(statuses, :id, :name)) %>
    <% else %>
        <%= select_tag('package[status_id]', options_from_collection_for_select(statuses, :id, :name, package.status.id)) %>
    <% end %>
<% else %>
    <%= form.collection_select :status_id, statuses, :id, :name %>
<% end %>
