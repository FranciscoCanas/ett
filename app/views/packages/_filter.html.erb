<% if logged_in? %>
    <% if params[:user] %>
        <%= link_to 'All Packages', :controller => :packages, :action => :index, :brew_tag_id => params[:brew_tag_id] %>
    <% else %>
        <%= link_to 'My Packages', :controller => :packages, :action => :index, :brew_tag_id => params[:brew_tag_id], :user => session[:current_user].email %>
    <% end %>
<% end %>