<% if has_tag? %>
    <%= f.hidden_field :brew_tag_id, :value => BrewTag.find_by_name(unescape_url(params[:brew_tag_id])).id %>
<% else %>
    <tr>
      <td colspan>
        Tag
      </td>
      <td colspan style="text-align:left;">
        <%= f.collection_select :brew_tag_id, BrewTag.all(:order => "name"), :id, :name %>
      </td>
    </tr>
<% end %>
