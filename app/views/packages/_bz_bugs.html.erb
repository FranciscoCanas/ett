<%= render :partial => 'layouts/line' %>
<%= render :partial => 'layouts/sep' %>
<h3>Related Bugzilla Bugs</h3>

<% if logged_in? %>
    <form onsubmit="return false;">
      <button onclick="showCreateBzBugLinkForm();">Link to an existing bug</button>
      <%= render :partial => 'layouts/progress_indicator', :locals => {:progress_indicator_id => 'link_bz_bug_form_indicator'} %>
      or
      <button onclick="showCreateBzBugForm()">Create a new bug</button>
      <%= render :partial => 'layouts/progress_indicator', :locals => {:progress_indicator_id => 'new_bz_bug_form_indicator'} %>
      in Bugzilla
      <%= render :partial => 'layouts/sep' %>
    </form>
<% end %>
<div id="link_bz_bug_form_div" style="display:none;"></div>
<div id="new_bz_bug_form_div" style="display:none;"></div>
<%= render :partial => 'packages/bz_bug_list', :locals => {:package => package} %>
<%= render :partial => 'layouts/sep_tiny' %>
<%= render :partial => 'packages/bz_bug_sync', :locals => {:package => package} %>
<%= render :partial => 'layouts/sep_tiny' %>

<% content_for :js do %>
    <%= render :partial => 'packages/bz_bug_link_js', :locals => {:package => package} %>
    <%= render :partial => 'packages/time_tracking_js' %>
<% end %>

<% content_for :css do %>
    <style type="text/css">
        .small_font {
            font-size: 10px;
        }

    </style>
<% end %>
