<td style='font-size:10px;text-align:left;<%= deleted_style(package) %>;' onmouseover="show_pac_btn('pac_<%= package.id %>_name');" onmouseout="hide_pac_btn('pac_<%= package.id %>_name');">
  <span id='pac_<%= package.id %>_name_switch' style="display:none;">on</span>
  <%= render :partial => 'packages/index/name_link', :locals => {:package => package} %>
  <span id='pac_<%= package.id %>_name_editor' style="display:none">
  <form action="/packages/<%= package.id %>"
        id="pac_<%= package.id %>_name_form"
        method="post"
        onsubmit="new Ajax.Request('/packages/<%=package.id%>',
                {
                        asynchronous:true, evalScripts:true,
                        onLoading:function(request) {Element.show('pac_<%=package.id%>_name_spinner');},
                        onSuccess:function(request) {
                                this.reset;
                                },
                        parameters:Form.serialize(this)
                        });return false;">

    <%= hidden_field_tag '_method', 'put' %>
    <%= hidden_field_tag :id, package.id %>
    <%= hidden_field_tag :div, "pac_#{package.id}_name" %>
    <%= hidden_field_tag :user, params[:user] %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= text_field_tag "package[name]", package.name, :id => "pac_#{package.id}_name_input" %>
    <%= submit_tag 'Update' %>
    <%= render :partial => 'layouts/progress_indicator', :locals => {:progress_indicator_id => "pac_#{package.id}_name_spinner"} %>
  </form></span>

  <span id='pac_<%= package.id %>_name_btn' style="display:none;">&nbsp;</span>
</td>

