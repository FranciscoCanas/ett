<% disabled ||= nil %>
<% if field_name == 'Ver' && !package.can_edit_version?
     disabled = true
   end %>

<% final_field_name = "package[#{field_name.underscore}]" %>
<% field_val = package[field_name.underscore] %>

<% if field_name == "Bz" %>
    <% final_field_name = "flatten_bzs" %>
    <% field_val = package.bzs_flatten %>
<% end %>

<%= text_field_tag final_field_name, field_val, :id => "pac_#{package.id}_#{field_name}_input", :disabled => disabled %>