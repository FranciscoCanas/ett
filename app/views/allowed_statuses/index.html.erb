<h1>Listing allowed_statuses</h1>

<table>
  <tr>
    <th>Workflow</th>
    <th>Status</th>
    <th>Next statuses</th>
  </tr>

<% @allowed_statuses.each do |allowed_status| %>
  <tr>
    <td><%=h allowed_status.workflow_id %></td>
    <td><%=h allowed_status.status_id %></td>
    <td><%=h allowed_status.next_statuses %></td>
    <td><%= link_to 'Show', allowed_status %></td>
    <td><%= link_to 'Edit', edit_allowed_status_path(allowed_status) %></td>
    <td><%= link_to 'Destroy', allowed_status, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New allowed_status', new_allowed_status_path %>